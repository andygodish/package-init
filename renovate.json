{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["\\.ya?ml$"],
      "matchStrings": [
        "- name: PACKAGE_VERSION\\s*\\n\\s*description: \"Version of the Zarf Init package\"\\s*\\n\\s*default: \"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "zarf-dev/zarf",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["zarf-dev/zarf"],
      "groupName": "Zarf Init Package",
      "semanticCommitType": "deps",
      "semanticCommitScope": "init",
      "commitMessageTopic": "Zarf Init package"
    }
  ]
}